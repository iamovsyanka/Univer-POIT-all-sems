{{#unless user}}
    <h2>Welcome! Please log in.</h2>
    <a href="/auth/vk">Log in with VK</a>
{{/unless}}
{{#if user}}
    <h2>Hello, {{user.displayName}}.</h2>

    <p>VK ID: {{user.id}}</p>
    <p>VK Username: {{user.username}}</p>
    <p>VK Name: {{user.displayName}}</p>

    <p><pre>{{ account }}</pre></p>

    <p><a href="/logout">Log out</a></p>
{{/if}}
